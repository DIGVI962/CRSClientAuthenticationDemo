<Window x:Class="CRSClientAuthenticationDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRSClientAuthenticationDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button
            Name="SecureCallButton" 
            Height="20" Width="100" 
            VerticalAlignment="Center" HorizontalAlignment="Center" 
            Content="Secure Call" 
            Visibility="Hidden"
            Click="SecureCallButton_Click"/>
        <Button 
            Name="ValidateKeyButton" 
            Height="20" Width="100" 
            VerticalAlignment="Center" HorizontalAlignment="Center" 
            Content="Validate Key" 
            Visibility="Hidden"
            Click="ValidateKeyButton_Click"/>
        <ProgressBar 
            Name="LoadingBar" 
            IsIndeterminate="True" 
            Height="20" Width="300" 
            VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label 
            Name="LoadingLabel" 
            Content="Loading..." 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" Margin="0,0,0,50"/>
    </Grid>
</Window>
